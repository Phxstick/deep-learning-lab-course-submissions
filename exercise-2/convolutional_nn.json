{
    "params": {
        "optimizer": "gd",
        "learning_rate": 0.3,
        "max_epochs": 10,
        "batch_size": 64,
        "init_stddev": 0.01
    },
    "layers": [
        {
            "type": "convolutional",
            "params": {
                "num_filters": 16,
                "filter_size": 3,
                "stride": 1,
                "padding": 0,
                "activation_function": "relu"
            }
        },
        {
            "type": "pooling",
            "params": {
                "window_size": 2,
                "stride": 2,
                "pooling_type": "MAX"
            }
        },
        {
            "type": "convolutional",
            "params": {
                "num_filters": 16,
                "filter_size": 3,
                "stride": 1,
                "padding": 0,
                "activation_function": "relu"
            }
        },
        {
            "type": "pooling",
            "params": {
                "window_size": 2,
                "stride": 2,
                "pooling_type": "MAX"
            }
        },
        {
            "type": "fully_connected",
            "params": {
                "num_units": 128,
                "activation_function": "relu"
            }
        }
    ]
}
